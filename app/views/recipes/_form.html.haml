= form_for :recipe, url: recipes_path do |f|
	- if @recipe && @recipe.errors.any?
		%ul
			- @recipe.errors.full_messages.each do |msg|
				%li= msg

	%p
		= f.label :title
		%br
		= f.text_field :title
	%p
		= f.label :rating
		%br
		= f.number_field :rating, in: 1..5
	%p
		= f.label :ingredients
		%br
		= f.text_area :ingredients
	%p
		= f.label :directions
		%br
		= f.text_area :directions
	%p
		= f.submit