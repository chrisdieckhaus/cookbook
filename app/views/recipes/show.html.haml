%h1= @recipe.title
%p= "Rating: #{@recipe.rating}"

%h2 Ingredients
%ul
	- @recipe.ingredients.split(",").each do |ingred|
		%li= ingred

%h2 Directions
%p= @recipe.directions

= button_to 'Edit Recipe', edit_recipe_path(@recipe), method: :get, :class => "btn btn-warning"
%br
= button_to 'Delete Recipe', recipe_path(@recipe), method: :delete, :class => "btn btn-danger"