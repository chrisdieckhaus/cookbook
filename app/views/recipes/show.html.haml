.container
	.row
		.col-md-12.col-sm-12
			%h1= @recipe.title
	<hr>

.container
	.row
		.col-md-3.col-sm-12
			%h2 Ingredients
			.list-group
				- @recipe.ingredients.split(",").each do |ingred|
					.list-group-item= ingred
		.col-md-9.col-sm-12
			%h2 Directions
			%p= @recipe.directions


.btn-group{:role=>"group"}
	= button_to 'Back', recipes_path(@recipe), method: :get, :class => "btn btn-primary", :role=>"button"
	= button_to 'Edit Recipe', edit_recipe_path(@recipe), method: :get, :class => "btn btn-warning", :role=>"button"
	= button_to 'Delete Recipe', recipe_path(@recipe), method: :delete, :class => "btn btn-danger", :role=>"button"


